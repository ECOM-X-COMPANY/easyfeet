<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1">


{% if template == 'product' %} 
 {% for collection in product.collections %}
    {% if collection.title == 'Tovaglie' %} 


       <title>{{ product.title }} — La scelta perfetta per il tuo tavolo | Wellmira</title>
       <meta name="description" content="Scegli {{ product.title }} per il tuo tavolo e goditi comfort ed eleganza ogni giorno. Wellmira è sinonimo di qualità.">

{% elsif collection.title == 'Tende a pannello'  %}
      
       <title>{{ product.title }} ordinare on-line — Wellmira</title>
       <meta name="description" content="Scegli {{ product.title }} per il tuo tavolo e goditi comfort ed eleganza ogni giorno. Wellmira è sinonimo di qualità.">
      
      
      

{% elsif collection.title == 'Coperta in Flanella'  %}
      
       <title>{{ product.title }} — Eccellenza e design da Wellmira</title>
       <meta name="description" content="{{ product.title }} di Wellmira combina stile e funzionalità. Realizzata con materiali di alta qualità, è l'aggiunta perfetta per ogni casa in cerca di comfort e design.">
      
      
      {% elsif collection.title == 'Federe per Cuscini'  %}
      
       <title>{{ product.title }} — Stile e comfort per i tuoi cuscini</title>
       <meta name="description" content="Scegli {{ product.title }} e aggiungi un tocco di classe ai tuoi cuscini. Wellmira è sinonimo di design e qualità in ogni dettaglio.">
      
      
      {% endif %}
      
  {% endfor %}
{% else %}
  

<title>
  {%- if request.page_type == 'password' -%}
    {{- shop.name -}}
  {%- else -%}
    {{- page_title -}}
    {%- if current_tags %}{% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}{% endif -%}
    {%- if current_page != 1 %} &ndash; {{ 'general.meta.page' | t: page: current_page }}{% endif -%}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  {%- endif -%}
</title>


{%- if page_description -%}
  <meta name="description" content="{{ page_description | escape }}">



{% endif %}

  



{% endif %}


{%- if canonical_url != blank -%}
  <link rel="canonical" href="{{ canonical_url }}">
{%- endif -%}

{%- if settings.favicon != blank -%}
  {%- liquid
    assign image_type = settings.favicon | split: '?' | first | split: '.' | last | downcase
    if image_type == 'svg'
      assign image_type = 'svg+xml'
    endif
  -%}
  <link rel="icon" href="{{ settings.favicon | image_url: width: 48, height: 48 }}" type="image/{{ image_type }}">
  <link rel="apple-touch-icon" href="{{ settings.favicon | image_url: width: 180, height: 180 }}">
{%- endif -%}


